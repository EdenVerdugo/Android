<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.eden.udemycurso.ThirdActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <EditText
            android:id="@+id/txtTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ems="12"
            android:inputType="phone"
            android:layout_toLeftOf="@+id/imgbtnTelefono"
            android:layout_toStartOf="@+id/imgbtnTelefono" />

        <ImageButton
            android:id="@+id/imgbtnTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_call" />

        <EditText
            android:id="@+id/txtWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTelefono"
            android:layout_alignParentLeft="true"
            android:ems="12"
            android:inputType="text"
            android:layout_toLeftOf="@+id/imgbtnWeb"
            android:layout_toStartOf="@+id/imgbtnWeb" />

        <ImageButton
            android:id="@+id/imgbtnWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_view"
            android:layout_alignBottom="@+id/txtWeb"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <ImageButton
        android:id="@+id/imgbtnCamara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:src="@android:drawable/ic_menu_camera"
        android:padding="7dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
